<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:background="@color/colorWhite">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/eng_photo_title1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/eng_name_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luois Tomilinson"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/eng_photo_title1"
                    app:layout_constraintLeft_toRightOf="@id/eng_photo_title1"/>

                <TextView
                    android:id="@+id/eng_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web developer"
                    app:layout_constraintLeft_toLeftOf="@id/eng_name_title1"
                    app:layout_constraintTop_toBottomOf="@id/eng_name_title1"/>

                <TextView
                    android:id="@+id/eng_webdev_skill_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML"
                    android:textSize="12sp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rounded_button"
                    app:layout_constraintLeft_toLeftOf="@id/eng_title1"
                    app:layout_constraintTop_toBottomOf="@id/eng_title1"/>

                <TextView
                    android:id="@+id/eng_webdev_skill_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML"
                    android:textSize="12sp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rounded_button"
                    app:layout_constraintLeft_toRightOf="@id/eng_webdev_skill_1"
                    app:layout_constraintTop_toBottomOf="@id/eng_title1"/>

                <TextView
                    android:id="@+id/eng_webdev_skill_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HTML"
                    android:textSize="12sp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rounded_button"
                    app:layout_constraintLeft_toRightOf="@id/eng_webdev_skill_2"
                    app:layout_constraintTop_toBottomOf="@id/eng_title1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>