<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorWhite">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginVertical="4dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/hire_pj_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aplikasi kalkulator"
                    android:textSize="24dp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/hire_pj_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Membuat aplikasi kalkulator dengan kotlin"
                    android:textSize="18dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hire_pj_name"/>

                <TextView
                    android:id="@+id/hire_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget : Rp.5.000.000"
                    android:textSize="18dp"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_budget"
                    android:drawablePadding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hire_pj_message"/>

                <TextView
                    android:id="@+id/hire_pj_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deadline : 2021-03-03"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hire_price"/>

                <TextView
                    android:id="@+id/hire_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status: wait"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_notes"
                    android:drawablePadding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hire_pj_deadline"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

