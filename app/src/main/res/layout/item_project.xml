<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/project_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pj_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/portofolio1"
                android:layout_margin="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/pj_deskripsi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Membuat aplikasi dengan Laravel"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@id/pj_photo"
                app:layout_constraintLeft_toRightOf="@id/pj_photo"/>

            <TextView
                android:id="@+id/pj_com"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="PT. Solusi bersama"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/pj_deskripsi"
                app:layout_constraintLeft_toRightOf="@id/pj_photo"/>

            <TextView
                android:id="@+id/pj_deadline"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="3 Bulan"
                android:textSize="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/pj_com"
                app:layout_constraintLeft_toRightOf="@id/pj_photo"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>