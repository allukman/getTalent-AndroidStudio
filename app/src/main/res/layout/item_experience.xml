<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/xp_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tokopedia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/xp_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Engineer"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@id/xp_logo"
            app:layout_constraintLeft_toRightOf="@id/xp_logo"/>

        <TextView
            android:id="@+id/xp_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tokopedia"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/xp_job_title"
            app:layout_constraintLeft_toLeftOf="@id/xp_job_title"/>

        <TextView
            android:id="@+id/xp_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="19 July 2019"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/xp_company_name"
            app:layout_constraintLeft_toLeftOf="@id/xp_company_name"/>
        <TextView
            android:id="@+id/xp_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="- 10 January 2020"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@id/xp_company_name"
            app:layout_constraintLeft_toRightOf="@id/xp_start_date"/>

        <TextView
            android:id="@+id/xp_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/colorGrey"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/xp_start_date"
            app:layout_constraintLeft_toLeftOf="@id/xp_start_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>